<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_width="56dp"
    android:layout_height="64dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:id="@+id/contentHolder"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:src="@color/imgly_background"
                android:scaleType="centerCrop"
                style="@style/Imgly.Editor.Toolbar.Panels.Text.Color.ItemIcon"/>
            <View
                android:padding="0dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Imgly.Editor.Toolbar.Panels.Text.Color.ItemSelectOverlay"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imgly_color_filter_name_default"
            style="@style/Imgly.Editor.Toolbar.Panels.Crop.ItemLabel"
            android:visibility="gone"
            android:lines="1"
            />

    </LinearLayout>
</RelativeLayout>