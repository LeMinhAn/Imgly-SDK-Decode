<com.camerafilter.ui.widgets.AutoRotateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="6dp"
    android:layout_width="64dp"
    android:layout_height="64dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:id="@+id/contentHolder">
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center">
            <View
                android:padding="0dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Imgly.Editor.Toolbar.Panels.Crop.ItemSelectBackground"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/imgly_icon_camera_roll"
                style="@style/Imgly.Editor.Toolbar.Panels.Crop.ItemIcon"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imgly_color_filter_name_default"
            style="@style/Imgly.Editor.Toolbar.Panels.Crop.ItemLabel"
            android:lines="1"
            />

    </LinearLayout>
</com.camerafilter.ui.widgets.AutoRotateLayout>