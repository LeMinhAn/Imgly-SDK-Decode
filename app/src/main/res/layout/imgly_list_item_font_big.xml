<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentHolder"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    style="@style/Imgly.Editor.Toolbar.Panels.Text.FontVertical">

    <TextView
        android:id="@+id/text"
        android:text="@string/imgly_tool_name_orientation"
        android:lines="1"
        style="@style/Imgly.Editor.Toolbar.Panels.Text.FontVertical.ItemText"/>

    <TextView
        android:id="@+id/label"
        android:text="@string/imgly_tool_name_orientation"
        android:lines="1"
        style="@style/Imgly.Editor.Toolbar.Panels.Text.FontVertical.ItemLabel"/>

</LinearLayout>