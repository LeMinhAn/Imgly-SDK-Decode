<com.camerafilter.ui.widgets.AutoRotateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="6dp"
    android:layout_width="64dp"
    android:layout_height="64dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:id="@+id/contentHolder"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/imgly_icon_tool_crop"
            style="@style/Imgly.Editor.Toolbar.Panels.Tool.ItemIcon"
            />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imgly_tool_name_orientation"
            style="@style/Imgly.Editor.Toolbar.Panels.Tool.ItemLabel"/>

    </LinearLayout>
</com.camerafilter.ui.widgets.AutoRotateLayout>
